{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "downlevelIteration": true,

    "moduleResolution": "node",
    "sourceMap": true
  }
}
